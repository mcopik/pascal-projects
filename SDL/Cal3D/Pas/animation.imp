constructor CalAnimation.Create( pCoreAnimation : CalCoreAnimation );
begin
  inherited Create;
  m_pCoreAnimation := pCoreAnimation;
  m_type := TYPE_NONE;
  m_state := STATE_NONE;
  m_time := 0.0;
  m_timeFactor := 1.0;
  m_weight := 0.0;
end;

